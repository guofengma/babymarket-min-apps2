


.product-sp-thumb{
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 0 0 auto;

    padding:10rpx 12rpx;
    border-radius: 10rpx;
    border: 1rpx solid lightgray;
    color: #3c3d3d;
    background-color: white;

    margin: 10rpx 0 10rpx 20rpx;
    font-size: 26rpx;
}

.product-sp-thumb-select{
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 0 0 auto;
    padding:10rpx 12rpx;
    border-radius: 10rpx;
    background-color: white;
    margin: 10rpx 0 10rpx 20rpx;
    font-size: 26rpx;
    border: 1rpx solid #715329;
    color: #715329;
}

.product-sp-thumb-invalid{
    background-color: #EEEEEE;
    color: #8A8A8A;
    border: 1rpx solid #EEEEEE;
}