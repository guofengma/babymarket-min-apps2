/* product-specification.wxss */

@import '/pages/shopping-cart/count/cart-count.wxss';
@import '/components/submit-btn/submit-btn.wxss';
@import '/components/adder-subtractor/adder-subtractor.wxss';
@import "/components/product-specification/thumb/product-sp-thumb.wxss";


.product-specification{
    display: flex;
    flex-direction: column;
    align-self: flex-end;
    justify-content: flex-end;
    width: 100%;
    background-color: white;
}

/*头*/
.product-specification .header{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    border-bottom: 1px solid lightgray;
}

.product-specification .header .header-left{
    display: flex;
    flex-direction: row;
}
.product-specification .header .header-left .price{
    color: #af8327;
    font-size: 28rpx;
}
.product-specification .header .header-left .inv{
    color: #1a1c1f;
    font-size: 28rpx;
}

.product-specification .header .dismiss-btn{
    height: 50rpx;
    width:50rpx;
    padding: 10rpx;
}

/*分组*/
.product-specification .thumb-group-title{
    font-size: 30rpx;
    padding:20rpx;
}

.product-specification .thumb-group{
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    justify-content: flex-start;
    width: 100%;
}

.product-specification .counter{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin:10rpx 20rpx;
}

.product-specification .counter-value{
    font-size: 30rpx;
    padding-right: 20rpx;
}

/*提交按钮*/
.product-specification .submit-btn-container{
    height: auto;
    margin: 22rpx;
    width: 706rpx;
}