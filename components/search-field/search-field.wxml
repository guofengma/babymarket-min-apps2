<template name="search-field">
  <view catchtap="searchClicked" class="search-field">
    <image mode="AspectFit" src="{{imgSrc?imgSrc:'/res/img/common/common-search-icon.png'}}" />
    <input class="search-input" disabled="{{isDisabled==undefined?true:isDisabled}}" catchconfirm="onConfirmAction" confirm-type="{{confirmText.length>0?confirmText:'search'}}" value="{{defaultValue}}"/>
  </view>
</template>