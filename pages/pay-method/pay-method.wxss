.main {
  position: relative;
  height: 100%;
  width: 100%;
}

.pay-method-top {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 200rpx;
  background: white;
  border-bottom: 10rpx solid #f5f7f7;
  border-top: 10rpx solid #f5f7f7;
}

.top, .bottom {
  display: flex;
}

.top-icon, .way-select {
  width: 25rpx;
  height: 25rpx;
}

.top-text {
  font-size: 34rpx;
  margin-left: 10rpx;
  color: #000406;
}

.center-text {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #000406;
}

.bottom-text {
  font-size: 24rpx;
  color: #000406;
}

.bottom-money {
  font-size: 24rpx;
  color: #e73962;
}

.pay-way {
  display: flex;
  flex-direction: column;
  background: white;
}

.pay-way-text {
  padding: 20rpx 20rpx 20rpx 20rpx;
  font-size: 28rpx;
  color: #000406;
}

.divide {
  width: 100%;
  height: 2rpx;
  background: gainsboro;
}

.pay-way-list {
  display: flex;
  background: white;
  padding: 20rpx 20rpx 20rpx 20rpx;
  align-items: center;
}

.pay-way-img {
  height: 51rpx;
  width: 64rpx;
}

.pay-way-value {
  font-size: 28rpx;
  color: #3c3d3d;
  flex-grow: 1;
  margin-left: 20rpx;
}

.pay-footer {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.pay-bt {
  color: white;
  background: #e73962;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin: 20rpx 20rpx 20rpx 20rpx;
  height: 90rpx;
  justify-content: center;
  display: flex;
  align-items: center;
}
