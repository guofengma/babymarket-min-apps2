.container {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10002;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.view_bottom {
  width: 100%;
  box-sizing: border-box;
  padding: 12px 12px 30px 12px;
  position: fixed;
  bottom: 0;
  background-color: white;
  z-index: 2;
}

input {
  background-color: #7d7f81;
  color: white;
  font-size: 13px;
  padding: 20rpx;
}

.bt_login {
  background-color: #715329;
  color: white;
  margin-top: 15px;
  font-size: 17px;
  padding-top: 3px;
  padding-bottom: 3px;
}

.view_password {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.password_empty {
  flex-grow: 1;
}

text {
  color: #454950;
  font-size: 22rpx;
}
