/* order-refund.wxss */

.tips-view {
    margin: 22rpx;
    font-size: 28rpx;
    color: #1a1c1f;
}

.tips-items {
    width: 706rpx;
    margin-bottom: 10rpx;
}

.refund-reason {
    background: white;
    width: 100%;
    height: 88rpx;
    display: flex;
    align-items: center;
}

.reason-text {
    margin-left: 22rpx;
    font-size: 28rpx;
    color: #1a1c1f;
    width: 120rpx;
}

.reason {
    margin-right: 20rpx;
    width: 530rpx;
    text-align: right;
    font-size: 28rpx;
    color: #1a1c1f;
}

.down-arrow {
    margin-right: 22rpx;
    width: 36rpx;
    height: 20rpx;
}

.input-view {
    background: white;
    width: 100%;
    height: 200rpx;
    margin-top: 20rpx;
    display: flex;
    padding: 22rpx;
}

.refund-desp {
    font-size: 28rpx;
    color: #1a1c1f;
    width: 140rpx;
    height: 100%;
    flex-shrink: 0;
}

.refund-desp-textarea {
    font-size: 28rpx;
    color: #1a1c1f;
    width: 566rpx;
    height: 100%;
}

.contact-view {
    margin-top: 20rpx;
    padding: 22rpx;
    font-size: 28rpx;
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background: white;
}

.contact {
    font-size: 28rpx;
    color: #1a1c1f;
}

.mobile {
    color: #7697c6;
}

.mobile-view {
    display: flex;
}

.submit-button {
    margin: 40rpx;
    width: 670rpx;
    height: 80rpx;
    font-size: 32rpx;
    color: white;
    background: #af8327;
    line-height: 80rpx;
    text-align: center;
    position: fixed;
    bottom: 40rpx;
}

button::after {
    border: 0;
}

.picker-view {
    background: #b0b1b3;
    text-align: center;
    width: 100%;
    height: 500rpx;
    color: red;
    /* z-index: 20; */
}
