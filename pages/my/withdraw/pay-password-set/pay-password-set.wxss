/* pay-password-set.wxss */
@import '/pages/my/cell/input-cell.wxss';

.mobile{
    font-size: 32rpx;
    color: #1a1c1f;
    padding: 40rpx 24rpx 24rpx 30rpx;
    background: white;
    width: 696rpx;
}

/*验证码*/
.bg-view{
    background: white;
    width: 100%;
    height: 84rpx;
    padding-bottom: 10rpx;
    border: 2rpx solid white;
}

.verify-code{
    border-radius: 10rpx;
    background: #f1f3f4;
    display: flex;
    align-items: center;
    margin: 0rpx 24rpx 0rpx 24rpx;
    height: 100%;
}

.verif-input{
    font-size: 28rpx;
    color: #1a1c1f;
    margin-left: 20rpx;
    width: 430rpx;
}

.sepline{
    width: 2rpx;
    height: 44rpx;
    background: #dcdedf;
}

.count-down{
    color: #7697c6;
    font-size: 28rpx;
    text-align: center;
    width: 240rpx;
}

.tips-view{
    margin: 20rpx 24rpx 30rpx 24rpx;
    font-size: 26rpx;
    color: #454950;
    display: flex;
}

.number{
    color: #7697c6;
}

button::after{
    border: 0;
}

.okButton{
    width: 702rpx;
    margin: 50rpx 24rpx 30rpx 24rpx;
    line-height: 88rpx;
    border-radius: 8rpx;
    background: #af8327;
    font-size: 38rpx;
    color: white;
    text-align: center;
}