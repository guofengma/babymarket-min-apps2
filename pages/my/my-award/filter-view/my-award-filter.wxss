/*模态背景框，半透明黑色，全屏*/
.model-view-bg {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10002;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.5);
}

.title{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100rpx;
    width: 750rpx;
    color: #252525;
    font-size: 28rpx;
    background-color: white;
}

.cancel{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100rpx;
    width: 750rpx;
    color: #252525;
    font-size: 28rpx;
    background-color: #F4F4F4;
}

.content{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 100%;
    height: auto;
    background-color: #F4F4F4;
    padding:40rpx 29rpx;
}
.thumb{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background-color: white;
    font-size: 28rpx;
    border-radius: 16rpx;
    height: 120rpx;
    width: 222rpx;
    margin: 0 12rpx 12rpx 0;
}


