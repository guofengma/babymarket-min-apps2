.my-award-cell {
  display: flex;
  background: white;
  height: 90rpx;
  padding: 10rpx 30rpx;
  justify-content: space-between;
  align-items: center;
}

.icon {
    width:84rpx;
    height:84rpx;
}

.mid{
    display: flex;
    flex-direction: column;
    height: 100%;
    align-items: flex-start;
    justify-content: center;
    margin: 0 24rpx;
}

.left-view {
  display: flex;
  flex-direction: row;
    height: 100%;
}

.name-base{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.name {
  font-size: 28rpx;
  color: #26272a;
}

.name-small{
    font-size: 20rpx;
    color:#A0A0A0;
    margin-left:10rpx;
}

.source {
  font-size: 24rpx;
  color: #7d7f81;
  margin-top: 10rpx;
}

.amount {
  font-size: 32rpx;
  color: #1a1c1f;
}

.time {
  font-size: 22rpx;
  color: #b0b1b3;
}
