/* orderDetail.wxss */
@import '/pages/my/cell/address-cell.wxss';
@import '/pages/my/myOrder/orderLineCell/orderline-cell.wxss';
@import '/pages/my/cell/delivery-info-cell.wxss';

.order-status-view {
  background: #715329;
  height: 170rpx;
  display: flex;
  align-items: center;
  /*border-top: 2rpx solid white;*/
}

.order-status-view .status-desp {
  font-size: 32rpx;
  color: white;
  margin-left: 83rpx;
  flex: 1;
}

.order-status-view .status-image {
  width: 140rpx;
  height: 140rpx;
  margin-right: 96rpx;
}

.total-amount-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  background: white;
  font-size: 32rpx;
  color: #000406;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-bottom: 20rpx solid #f5f5f7;
}

.order-info-view {
  background: white;
  height: 120rpx;
  width: 100%;
  align-items: center;
  padding-left: 20rpx;
  font-size: 26rpx;
  color: #b3b7b9;
  padding-top: 30rpx;
}

.order-info-view text {
  margin-top: 15rpx;
}

.orderlineView {
  background: white;
}

.order-sepline {
  background: #f5f7f7;
  margin-left: 25rpx;
  height: 2rpx;
  width: 725rpx;
}

.address-view {
  border-bottom: 10rpx solid #f5f7f7;
}

.delivery-view {
  background: white;
}

.bottom-view {
  background-color: white;
  height: 112rpx;
  width: 100%;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  font-size: 30rpx;
  position: fixed;
  bottom: 0;
}

.bottom-button {
  border-radius: 10rpx;
  margin-right: 22rpx;
  background-color: white;
  padding: 18rpx 30rpx;
  width: 130rpx;
  text-align: center;
}

.bottom-button.right {
  border: 2rpx solid #e73962;
  color: #e73962;
  position: fixed;
  right: 0;
}

.bottom-button.left {
  border: 2rpx solid #3c3d3d;
  color: #3c3d3d;
  position: fixed;
  right: 220rpx;
}
