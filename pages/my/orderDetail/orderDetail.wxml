<!--orderDetail.wxml-->

<import src='/pages/my/cell/address-cell.wxml' />
<import src='/pages/my/myOrder/orderLineCell/orderline-cell.wxml' />
<import src='/pages/my/cell/delivery-info-cell.wxml' />
<import src='/pages/my/myOrder/settlement-cell/settlement-cell.wxml' />

<!--订单状态-->
<view class="background-view">
    <image class="address-header-line" src="/res/img/address/address-header-line.png"/>

    <view class="address-base">
        <view class="name-base">
            <view>{{addressData.name}}</view>
            <view>{{addressData.mobile}}</view>
        </view>
        <view class="detail">{{addressData.detail}}</view>
    </view>
    <view style="height:19rpx;width:100%;"></view>

    <view class="status-base">
        <view class="time">{{orderDatas.CreateTime}}</view>
        <view class="status">{{orderStatus}}</view>
    </view>
    <view class="sep-line"/>




    <!--商品列表-->
    <view wx:for="{{orderLineList}}" class="orderlineView" wx:key="unique">
        <template is="orderline-cell" data="{{datas:item}}"></template>
        <!--todo-->
        <block wx:if="{{orderDatas.StatusKey == '1' || orderDatas.StatusKey == '2' || orderDatas.StatusKey == '3'}}">
            <view class="refund-base">
                <view class="refund-btn" catchtap="refundClicked" data-index="{{index}}">
                    <view>申请退款</view>
                </view>
            </view>
        </block>
        <view class="order-sepline"></view>
    </view>










    <!--结算-->
    <view style="height:19rpx;width:100%;"></view>
    <block wx:for="{{settlementList}}" wx:key="unique">
        <view class="settlement-view-cell">
            <template is="settlement-cell" data="{{datas:item}}"></template>
        </view>
    </block>
    <view style="height:19rpx;width:100%;"></view>
</view>









<!--底部按钮-->
<view class="bottom-view">
    <view class="bottom-button right" wx:if="{{bottomButton0Name == '联系客服'}}">
        <button class='contact' open-type="contact">联系客服</button>
    </view>
    <view class="bottom-button right" bindtap="bottomButtonTap" data-title="{{bottomButton0Name}}" wx:else>{{bottomButton0Name}}</view>

    <view class="bottom-button middle" bindtap="bottomButtonTap" data-title="{{bottomButton1Name}}" wx:if="{{bottomButton1Name != ''}}">{{bottomButton1Name}}</view>
    <view class="bottom-button left" bindtap="bottomButtonTap" data-title="{{bottomButton2Name}}" wx:if="{{bottomButton2Name != ''}}">{{bottomButton2Name}}</view>
</view>