@import '/pages/my/myOrder/orderLineCell/orderline-cell.wxss';

.time-line {
    width: 100%;
    height: 72rpx;
    display: flex;
    background-color: white;
    align-items: center;
}

.time-line .time {
    flex: 4 0 auto;
    margin-left: 22rpx;
    font-size: 26rpx;
    color: #7d7f81;
}

.time-line .order-status {
    flex: 1 0 auto;
    margin-right: 22rpx;
    font-size: 26rpx;
    color: #af8327;
    text-align: right;
}

.total-amount {
    display: flex;
    padding-right: 22rpx;
    justify-content: flex-end;
    align-items: center;
    width: 728rpx;
    height: 84rpx;
    background: white;
}

.total-amount .amount {
    font-size: 30rpx;
    color: #af8327;
    margin-right: 22rpx;
}

.total-amount .goods-num {
    font-size: 24rpx;
    color: #454950;
}

.bottom-button-view {
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    font-size: 26rpx;
    width: 100%;
    height: 80rpx;
    border-bottom: 20rpx solid #f5f7f7;
    background: white;
}

.bottom-button {
    border-radius: 44rpx;
    background-color: white;
    padding: 5rpx 10rpx;
    width: 130rpx;
    line-height: 44rpx;
    margin-right: 22rpx;
}

.bottom-button.right {
    border: 2rpx solid #b0b1b3;
    color: #454950;
    text-align: center;
}

.bottom-button.right.pay {
    border: 2rpx solid #7697c6;
    color: #7697c6;
    width: 202rpx;
}

.bottom-button.mid {
    border: 2rpx solid #b0b1b3;
    color: #454950;
    text-align: center;
}

.bottom-button.left {
    border: 2rpx solid #b0b1b3;
    color: #454950;
    text-align: center;
}

.orderline-cell {
    background: white;
}

/*重新设置cell的样式*/

.product-image {
    background: white;
    width: 150rpx;
    height: 150rpx;
    margin-left: 20rpx;
    flex-shrink: 0;
}

.cart-title {
    font-size: 24rpx;
    color: #1a1c1f;
    width: 90%;
    line-height: 120%;
}

.cart-desp {
    font-size: 22rpx;
    color: #acadaa;
    margin-top: 10rpx;
}

.cart-price {
    font-size: 24rpx;
    color: #af8327;
}

.qty {
    color: #454950;
    font-size: 24rpx;
}

.contact {
    font-size: 26rpx;
    color: #454950;
    padding: 5rpx 10rpx; 
    width: 130rpx;
    line-height: 36rpx;
    background: white;
}

button::after{
    border: 0;
}


