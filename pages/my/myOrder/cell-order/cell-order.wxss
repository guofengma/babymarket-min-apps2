@import '/pages/my/myOrder/orderLineCell/orderline-cell.wxss';

.time-line {
    width: 100%;
    height: 72rpx;
    display: flex;
    background-color: white;
    align-items: center;
}

.time-line .time {
    flex: 4 0 auto;
    margin-left: 22rpx;
    font-size: 26rpx;
    color: #7d7f81;
}

.time-line .order-status {
    flex: 1 0 auto;
    margin-right: 22rpx;
    font-size: 26rpx;
    color: #AF383A;
    text-align: right;
}

.total-amount {
    display: flex;
    padding-right: 22rpx;
    padding-left: 35rpx;
    align-items: center;
    width: 300rpx;
    height: 100%;
    background: white;
}

.total-amount .amount {
    font-size: 28rpx;
    color: #515151;
    margin-right: 22rpx;
}

.total-amount .goods-num {
    font-size: 28rpx;
    color: #515151;
}

.bottom-button-view {
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    font-size: 26rpx;
    width: 100%;
    height: 100%;
    background: white;
}

.bottom-button {
    border-radius: 8rpx;
    background-color: white;
    padding: 5rpx 10rpx;
    width: 150rpx;
    line-height: 54rpx;
    margin-right: 22rpx;
}

.bottom-button.right {
    border: 2rpx solid #515151;
    color: #515151;
    text-align: center;
}

.bottom-button.right.pay {
    border: 2rpx solid #AF383A;
    color: #AF383A;
    width: 150rpx;
}

.bottom-button.mid {
    border: 2rpx solid #b0b1b3;
    color: #454950;
    text-align: center;
}

.bottom-button.left {
    border: 2rpx solid #b0b1b3;
    color: #454950;
    text-align: center;
}

.orderline-cell {
    background: white;
}

/*重新设置cell的样式*/

.product-image {
    background: white;
    width: 150rpx;
    height: 150rpx;
    margin-left: 20rpx;
    flex-shrink: 0;
}

.cart-title {
    font-size: 24rpx;
    color: #1a1c1f;
    width: 90%;
    line-height: 120%;
}

.cart-desp {
    font-size: 22rpx;
    color: #acadaa;
    margin-top: 10rpx;
}

.cart-price {
    font-size: 24rpx;
    color: #af8327;
}

.qty {
    color: #454950;
    font-size: 24rpx;
}

.contact {
    font-size: 26rpx;
    color: #454950;
    padding: 5rpx 10rpx; 
    width: 130rpx;
    line-height: 36rpx;
    background: white;
}

button::after{
    border: 0;
}

.order-cell .bottom{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-bottom: 20rpx solid #F6F6F6;
    height: 114rpx;
}




.sep-line{
    height:1px;
    width:100%;
    background-color:#DCDCDC;
}
.order-cell{
  width: 100%;
  box-sizing: border-box;
}
.sep{
  padding-left: 33rpx;
  background: #fff;
  padding-top: 20rpx;
}