
.orderline {
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.product-image {
  background: white;
  width: 118rpx;
  height: 118rpx;
  margin-left: 20rpx;
  border: 2rpx solid #dcdedf;
  flex-shrink: 0;
}

.cart-describe {
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  margin-left: 30rpx;
  width: 65%;
  display: flex;
  flex-direction: column;
}

.cart-title {
  font-size: 24rpx;
  color: #26272a;
  width: 100%;
  line-height: 120%;
}

.cart-desp {
  font-size: 26rpx;
  color: #acadaa;
  margin-top: 20rpx;
}

.cart-price-count {
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
}

.cart-price {
  font-size: 24rpx;
  color: #26272a;
}

.qty {
  color: #26272a;
  font-size: 24rpx;
  margin-top: 20rpx;
  text-align: right;
}
