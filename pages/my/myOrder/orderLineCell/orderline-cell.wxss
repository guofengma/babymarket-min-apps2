

.content{
  display: flex;
  flex-direction: row;
  width: 100%;
}
.content .left{
  display: flex;
  flex-direction: row;
  width: 620rpx;
  flex: 0 0 auto;
}
.content .left .pic{
  width:146rpx;
  height:146rpx;
  background-color: lightgray;
  margin: 20rpx 27rpx 0rpx 34rpx;
  flex: 0 0 auto;
}
.content .left .title-base{
  display: flex;
  flex-direction: column;
  margin: 20rpx 20rpx 0 0;
}
.content .left .title{
  font-size:26rpx;
  color:rgba(81,81,81,1);
  margin-bottom: 20rpx;
}
.content .left .specification{
  font-size:22rpx;
  color:rgba(151,151,151,1);
}

.content .price-base{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  font-size:22rpx;
  color:rgba(151,151,151,1);
  margin: 23rpx 20rpx 0 0;
  width: 100%;
}

.content .price-base .count{
  margin-bottom: 20rpx;
}







.twoline{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
