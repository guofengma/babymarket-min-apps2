.orderline {
  display: flex;
  /*background: #f3f3f4;*/
  /*border-bottom: 4rpx solid white;*/
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.product-image {
  background: white;
  width: 150rpx;
  height: 150rpx;
  margin-left: 20rpx;
}

.cart-describe {
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  margin-left: 30rpx;
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.cart-title {
  font-size: 30rpx;
  color: #3c3d3d;
  width: 100%;
  height: 80rpx;
  line-height: 120%;
}

.cart-price-count {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cart-price {
  margin-right: 80rpx;
  font-size: 34rpx;
  color: #e73962;
}

.qty {
  color: #5e5e5f;
  font-size: 28rpx;
  width: 10%;
  align-self: flex-end;
}
