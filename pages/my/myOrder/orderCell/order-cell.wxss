@import '/pages/my/myOrder/orderLineCell/orderline-cell.wxss';

.time-line {
  width: 100%;
  height: 86rpx;
  display: flex;
  background-color: white;
  align-items: center;
}

.time-line .time {
  flex: 4 0 auto;
  margin-left: 22rpx;
  font-size: 26rpx;
  color: #9b9a9b;
}

.time-line .order-status {
  flex: 1 0 auto;
  margin-right: 22rpx;
  font-size: 28rpx;
  color: #e73962;
  text-align: right;
}

.total-amount {
  width: 100%;
  height: 86rpx;
  background-color: white;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}

.sepline {
  width: 100%;
  height: 2rpx;
  color: #f1f1f1;
}

.total-amount .amount {
  font-size: 34rpx;
  color: #3c3d3d;
  margin-right: 22rpx;
}

.total-amount .goods-num {
  font-size: 28rpx;
  color: #5e5e5f;
}

.bottom-view {
  background-color: white;
  height: 112rpx;
  border-bottom: 10rpx solid #f5f7f7;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  font-size: 30rpx;
}

.bottom-button {
  border-radius: 10rpx;
  margin-right: 22rpx;
  background-color: white;
  padding: 18rpx 30rpx;
}

.bottom-button.right {
  border: 2rpx solid #e73962;
  color: #e73962;
  width: 130rpx;
  text-align: center;
}

.bottom-button.left {
  border: 2rpx solid #3c3d3d;
  color: #3c3d3d;
  width: 130rpx;
  text-align: center;
}

.orderline-cell{
    border-bottom: 4rpx solid white;
}
