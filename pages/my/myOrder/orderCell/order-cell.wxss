@import '/pages/my/myOrder/orderLineCell/orderline-cell.wxss';

.time-line {
  width: 100%;
  height: 86rpx;
  display: flex;
  background-color: white;
  align-items: center;
}

.time-line .time {
  flex: 4 0 auto;
  margin-left: 22rpx;
  font-size: 26rpx;
  color: #9b9a9b;
}

.time-line .order-status {
  flex: 1 0 auto;
  margin-right: 22rpx;
  font-size: 28rpx;
  color: #af8327;
  text-align: right;
}

.bottom-view {
  display: flex;
  justify-content: space-between;
  height: 103rpx;
  background: white;
  border-top: 2rpx solid #f1f1f1;
  border-bottom: 10rpx solid #f5f7f7;
}

.total-amount {
  margin-left: 24rpx;
  height: 112rpx;
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.total-amount .amount {
  font-size: 34rpx;
  color: #af8327;
  margin-right: 22rpx;
}

.total-amount .goods-num {
  font-size: 28rpx;
  color: #5e5e5f;
}

.bottom-button-view {
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  font-size: 30rpx;
  width: 100%;
  height: 100%;
}

.bottom-button {
  border-radius: 5rpx;
  margin-right: 22rpx;
  background-color: white;
  padding: 10rpx 15rpx;
  width: 140rpx;
  line-height: 40rpx;
}

.bottom-button.right {
  border: 2rpx solid #b0b1b3;
  color: #454950;
  text-align: center;
}

.bottom-button.left {
  border: 2rpx solid #b0b1b3;
  color: #454950;
  text-align: center;
}

.orderline-cell {
  /*border-bottom: 4rpx solid red;*/
  background: white;
}

/*重新设置cell的样式*/
.product-image {
  background: white;
  width: 150rpx;
  height: 150rpx;
  margin-left: 20rpx;
  border: 2rpx solid #dcdedf;
  flex-shrink: 0;
}

.cart-title {
  font-size: 32rpx;
  color: #1a1c1f;
  width: 100%;
  line-height: 120%;
}

.cart-desp {
  font-size: 26rpx;
  color: #acadaa;
  margin-top: 20rpx;
}

.cart-price {
  font-size: 34rpx;
  color: #af8327;
}

.qty {
  color: #454950;
  font-size: 28rpx;
  margin-top: 20rpx;
  text-align: right;
}