/* edit-profile.wxss */
@import '/pages/my/edit-profile/edit-profile-cell/edit-profile-cell.wxss';

.avatar-view{
    margin-top: 20rpx;
    width: 100%;
    height: 130rpx;
    display: flex;
    background: white;
    align-items: center;
}

.avatar-text{
    font-size: 32rpx;
    color: #1a1c1f;
    margin-left: 36rpx;
    flex-shrink: 0;
}

.avatar-image{
    width: 88rpx;
    height: 88rpx;
    border-radius: 44rpx;
    margin-left: 504rpx;  
    margin-right: 20rpx;
}

.arrow{
    margin-right: 27rpx; 
}

.mobile-view{
    margin-top: 20rpx;
    background: white;
    height: 88rpx;
    display: flex;
    align-items: center;
}

.mobile-text{
    font-size: 32rpx;
    color: #1a1c1f;
    margin-left: 36rpx;
    flex-shrink: 0;
}

.mobile-value{
    font-size: 30rpx;
    color: #b0b1b3;
    flex: 5 0 auto;
    text-align: right;
    margin-right: 62rpx;
}



