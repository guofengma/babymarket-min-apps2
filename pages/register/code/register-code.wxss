/* register-code.wxss */
@import '/components/submit-btn/submit-btn.wxss';

.register-code{
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    background-color: white;
    align-items: center;
}

.register-code .phone{
    font-size: 34rpx;
    width: 600rpx;
    margin:80rpx 0 60rpx;
}

.register-code .prompt{
    font-size: 26rpx;
    width: 600rpx;
}

.register-code input{
    width: 600rpx;
    height: 90rpx;
    border: 1px solid lightgray;
    margin:80rpx 0 34rpx;
}

.register-code .submit-container{
    width: 610rpx;
    height: 100rpx;
}






