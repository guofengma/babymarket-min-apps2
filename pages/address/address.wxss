/* shopping-cart.wxss */
@import '/pages/address/info/address-info.wxss';
@import '/components/empty-view/empty-view.wxss';

.address-main {
  position: relative;
  height: 100%;
  width: 100%;
}

.address-box {
  padding-bottom: 110rpx;
}

.address-list {
  display: flex;
  flex-direction: column;
  border-bottom: 10rpx solid #f5f7f7;
  background: white;
}

.address-select-delete {
  display: flex;
  align-items: center;
  padding: 20rpx 20rpx 20rpx 20rpx;
}

.address-select {
  width: 35rpx;
  height: 35rpx;
}

.address-status {
  margin-left: 14rpx;
  font-size: 28rpx;
}

.address-delete {
  display: flex;
  position: absolute;
  right: 20rpx;
  align-items: center;
}

.address-img-delete {
  width: 45rpx;
  height: 45rpx;
  margin-right: 20rpx;
}

.address-text-delete {
  font-size: 28rpx;
}

.address-divide {
  width: 100%;
  height: 2rpx;
  background: gainsboro;
}

.address-add {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: white;
}

.address-add-bt {
  color: #715329;
  border: 1rpx solid #715329;
  background: white;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin: 20rpx 20rpx 20rpx 20rpx;
  height: 70rpx;
  justify-content: center;
  display: flex;
  align-items: center;
}

button::after {
  border: 0;
}
