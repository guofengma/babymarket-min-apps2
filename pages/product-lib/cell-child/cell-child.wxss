.cell-child {
  display: flex;
  flex-direction: column;
  width: 50%;
  background-color: white;
  padding-left: 3rpx;
  padding-right: 3rpx;
  box-sizing: border-box;
  margin-bottom: 2rpx;
}

.cell-child .image {
  flex: none;
  width: 100%;
  height: 280rpx;
  background-color: white;
}

.cell-child .image.empty {
  background-color: #f3f3f4;
}

.cell-child .info {
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  align-items: center;
}

.cell-child .info .name {
  font-size: 26rpx;
  color: #3c3d3d;
}

.cell-child .info .price {
  font-size: 30rpx;
  color: #e73962;
  margin-top: 10rpx;
}
