@import '/pages/product-lib/cell-child/cell-child.wxss';
@import '/components/empty-view/empty-view.wxss';

.root-view {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.top-view {
  width: 100%;
  position: fixed;
  top: 0;
  padding: 15rpx;
}

.scroll {
  height: 100%;
  width: 100%;
  padding-top: 85rpx;
  box-sizing: border-box;
}

.list-view {
  display: flex;
  width: 100%;
  height: 100%;
  margin-top: 2rpx;
  flex-wrap: wrap;
}
