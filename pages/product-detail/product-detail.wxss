.root-view {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.root-view .product-info {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.product-info .image {
  width: 100%;
  height: 600rpx;
  flex: none;
  background-color: white;
}

.image.empty {
  background-color: #f3f3f4;
}

.product-info .info {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background-color: white;
  margin-top: 2rpx;
}

.info .name {
  font-size: 30rpx;
  color: black;
}

.info .detail {
  font-size: 20rpx;
  color: #3c3d3d;
  margin-top: 10rpx;
}

.info .price {
  display: flex;
  margin-top: 20rpx;
  align-items: center;
}

.info .price .title {
  font-size: 30rpx;
  color: black;
}

.info .price .value {
  font-size: 30rpx;
  color: #e73962;
}

.root-view .bottom-bar {
  display: flex;
  height: 100rpx;
  background-color: white;
}

.bottom-bar .go-cart-view {
  display: flex;
  height: 100%;
  flex-grow: 1;
  flex-direction: column;
  align-items: center;
  padding-top: 5rpx;
}

.go-cart-view .cart-image {
  width: 65rpx;
  height: 65rpx;
  flex: none;
}

.go-cart-view .cart-name {
  font-size: 20rpx;
  color: black;
  margin-top: 5dp;
}

.bottom-bar .btn-two {
  display: flex;
  height: 100%;
}

.btn-two .btn-addcart {
  display: flex;
  background-color: #ffba40;
  height: 100%;
  font-size: 35rpx;
  color: white;
  width: 300rpx;
  align-items: center;
  justify-content: center;
}

.btn-two .btn-submit {
  display: flex;
  background-color: #e73962;
  height: 100%;
  font-size: 35rpx;
  color: white;
  width: 300rpx;
  align-items: center;
  justify-content: center;
}
