.product-info {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}

.product-info .image {
    width: 100%;
    height: 600rpx;
    flex: none;
    background-color: white;
}

.image.empty {
    background-color: #f3f3f4;
}

.product-info .info {
    display: flex;
    flex-direction: column;
    padding: 20rpx 0;
    background-color: white;
    margin-top: 2rpx;
}

.info .name {
    font-size: 30rpx;
    color: black;
    padding: 0 20rpx;
}

.info .detail {
    font-size: 26rpx;
    color: #969999;
    margin: 24rpx 0 24rpx;
    padding: 0 20rpx;
}

.info .price {
    display: flex;
    align-items: center;
    padding: 0 20rpx;
}

.info .price .title {
    font-size: 30rpx;
    color: black;
}

.info .price .value {
    font-size: 30rpx;
    color: #e73962;
}

.bottom-bar {
    display: flex;
    height: 100rpx;
    background-color: white;
    position: fixed;
    bottom: 0rpx;
    width: 100%;
}

.bottom-bar .go-cart-view {
    display: flex;
    height: 100%;
    width: 100rpx;
    align-items: center;
    justify-content: center;
}

.go-cart-view .cart-image {
    width: 32rpx;
    height: 32rpx;
}

.go-cart-view.shoppingcar {
    border-right: 2rpx solid #f1f3f4;
}

.go-cart-view.contact {
    background-color: white;
    border-right: 2rpx solid #f1f3f4;
}

.bottom-bar .btn-two {
    display: flex;
    height: 100%;
}

.btn-two .btn-addcart {
    display: flex;
    
    background-color: #ffba40;
    height: 100%;
    font-size: 35rpx;
    color: white;
    width: 225rpx;
    align-items: center;
    justify-content: center;
}

.btn-two .btn-submit {
    display: flex;
    background-color: #715329;
    height: 100%;
    font-size: 35rpx;
    color: white;
    width: 225rpx;
    align-items: center;
    justify-content: center;
}

 .bmpi-country-base {
    display: flex;
    flex-direction: row;
    margin-top: 0px;
    margin-bottom: 4px;
    color: #6E6E6E;
}

.bmpi-price {
    font-size: 17px;
    color: #ab7b0f;
    margin-top: 5px;
}

.prefix{
    width: 110rpx;
    height: 30rpx;
    margin-left: 10rpx;
    margin-top: 10rpx;
}

.bmpi-old-price {
    font-size: 17px;
    color: #999;
    margin-left: 10px;
    margin-top: 5px;
    text-decoration: line-through;
}

.bmpi-country {
    font-size: 28rpx;
    padding: 14rpx 20rpx;
}

.bmpi-express-base {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    background-color: #f6f7f8;
    width: 100%;
    height: 30px;
    margin: 0px;
    font-size: 12px;
    /*padding-left: 10px;*//*margin-left: 10px;*/
}

.bmpi-location {
    margin-right: 15px;
    padding-left: 10px;
}

.bmpi-express {
    margin-right: 15px;
}

.product-detail-web-image {
    width: 100%;
    padding-bottom: 120rpx;
    background: white;
}

button::after{
    border: 0;
}
