
<import src='/pages/home/cell-price/cell-price.wxml' />

<template name="cell-product">
    <view class="cell-product">
        <block wx:for="{{productArray}}" wx:key="unique">





            <view class="{{index%2==0?'product-info left':'product-info'}}" catchtap="onChildClickListener" data-group-position="{{groupPosition}}" data-child-position="{{index}}" data-id="{{item.productId}}">
                <image mode="aspectFit" class="{{item.imageUrl.length>0?'image':'image empty'}}" src="{{item.imageUrl}}" />
                <view class="info">
                    <text class="name">{{item.ShowName}}</text>

                    <view class="price-cart">

                        <template is='cell-price' data='{{listDatas:item.priceArry, alignType:item.priceArry.length}}'></template>
                    </view>
                </view>
            </view>





        </block>
