<!--pages/home/v2/grid-ad/grid-ad.wxml-->


<block wx:if="{{items.length == 4}}">
    <view class="root">
        <block wx:for="{{items}}" wx:key="">
            <quarter-thumb bind:thumbClicked="thumbClicked" index="{{index}}" imgsrc="{{item.imgsrc}}"/>
        </block>
    </view>
</block>
<block wx:else>
    <view class="root">
        <view class="left">
            <quarter-thumb bind:thumbClicked="thumbClicked" index="0" imgsrc="{{item[0].imgsrc}}"/>
            <quarter-thumb bind:thumbClicked="thumbClicked" index="1" imgsrc="{{item[1].imgsrc}}"/>
        </view>

        <view class="right">
            <half-thumb bind:thumbClicked="thumbClicked" index="2" imgsrc="items[2].imgsrc"/>
        </view>
    </view>
</block>



