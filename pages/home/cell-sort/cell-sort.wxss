/*广告位*/
@import "/pages/home/ad/home-ad.wxss";
@import "/pages/home/cell-title/cell-title.wxss";
@import "/pages/home/cell-product/cell-product.wxss";

.cell-sort {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.more-bottom {
  color: #5e6064;
  text-align: center;
  font-size: 23rpx;
  padding: 30rpx;
}

.menu-container{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background-color: white;
    width: 750rpx;
}

.menu-root{
	display: flex;
	flex-direction: row;
    background-color: white;
    flex-wrap: wrap;
    margin: 0 15rpx 30rpx;
}



/*template*/
.cell-sort-menu-cell{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx 0 0;
}

.cell-sort-menu-cell .icon{
    width:84rpx;
    height:84rpx;
    border-radius: 41rpx;
    background:rgba(241,241,241,1);
    margin-bottom: 18rpx;
    flex: none;
}

.cell-sort-menu-cell .title{
    font-size:22rpx;
    color:rgba(37,37,37,1);
}