/* pages/home/crowdfunding/cell/crowdfunding-list-cell.wxss */
.root{
    display: flex;
    flex-direction: row;
    width:750rpx;
    height:280rpx;
    background-color: white;
}

.root image{
    width:260rpx;
    height:260rpx;
    display: flex;
    flex: 0 0 auto;
    padding: 10rpx;
}

.right{
    display: flex;
    flex-direction: column;
}

.title{
    font-size:28rpx;
    color:rgba(37,37,37,1);
    padding: 45rpx 0 8rpx;
}

.subtitle{
    display: flex;
    font-size:22rpx;
    color:rgba(151,151,151,1);
}

.priice{
    display: flex;
    font-size:34rpx;
    color:rgba(199,175,126,1);
    padding: 9rpx 0 7rpx;
}

.button{
    display: flex;
    align-items: center;
    justify-content: center;
    font-size:24rpx;
    color:rgba(199,175,126,1);
    width:138rpx;
    height:48rpx;
    border-radius: 4px;
    border:1px solid rgba(199,175,126,1);
}

