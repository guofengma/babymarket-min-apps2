/*确认订单*/
@import '/pages/address/info/address-info.wxss';
@import '/pages/order-confirm/cell-order/cell-order.wxss';

.main {
  position: relative;
  height: 100%;
  width: 100%;
}

/*顶部地址*/

.order-address {
  display: flex;
  background: white;
  align-items: center;
  border-bottom: 10rpx solid #f5f7f7;
  padding: 0 20rpx 0 20rpx;
}

.order-address-icon {
  width: 6%;
  height: 45rpx;
}

.order-address-info {
  flex-grow: 1;
}

.order-address-arrow {
  width: 30rpx;
  height: 30rpx;
}

/*中间订单详情*/

.order-list-box {
  margin-bottom: 120rpx;
}

.order-list {
  display: flex;
  height: 150rpx;
  border-bottom: 2rpx solid #f5f7f7;
  padding: 20rpx 20rpx 20rpx 20rpx;
  background: white;
}

/*底部结算*/

.order-footer {
  position: fixed;
  display: flex;
  align-items: center;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background: white;
  z-index: 20;
}

.order-footer-text {
  font-size: 26rpx;
  margin-left: 20rpx;
  color: #3c3d3d;
}

.order-footer-total {
  font-size: 26rpx;
  color: #af8327;
  flex-grow: 1;
}

.order-confirm-bt {
  height: 100%;
  margin-left: 40rpx;
  background: #af8327;
  color: white;
  font-size: 30rpx;
  justify-content: center;
  display: flex;
  padding-left: 30rpx;
  padding-right: 30rpx;
  align-items: center;
}
